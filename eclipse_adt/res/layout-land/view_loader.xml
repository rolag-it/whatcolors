<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lytSrcLoader"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"    
    tools:context=".SrcLoaderActivity" >

    <ImageButton
        android:id="@+id/imbCamera"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:onClick="startCapturing"
        android:scaleType="fitCenter"
        android:contentDescription="@string/action_camera"
        android:src="@drawable/ic_camera" />

    <ImageButton
       android:id="@+id/imbGallery"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:onClick="startCapturing"
        android:scaleType="fitCenter"
        android:contentDescription="@string/action_gallery"
        android:src="@drawable/ic_gallery" />

</LinearLayout>